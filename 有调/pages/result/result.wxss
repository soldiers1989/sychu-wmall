/* 搜索部分 */

/*list*/
.section-sep{
  padding:10px 15px 10px 15px;
  background-color: #fff;
  margin-top: 10px;
  font-size: 16px;
}

.first-section-sep{
  margin-top: 0;
  padding-top: 20px;
}

/* 上部横条结构卡片 */
.up-list{
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.up-list-item navigator{
  padding: 15px 15px 0 15px;
}

.item-desc-container{
  flex: 1;
  display: flex;
  border-bottom: 1px rgb(237,237,237) solid;
  padding-bottom: 15px;
}

.item-img{
  width: 120px;
  height: 80px;
}

.info-view{
  flex: 1;
  margin-left:15px;
  font-size: 12px;
  color:#999;
}

.title{
  font-size:14px;
  line-height: 1.45;
  max-height: 41px;
  color:#080808;
  margin-bottom: 10px;
  word-break: break-all;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-box-pack: start;
  -webkit-line-clamp: 2;
}

.title, .price{
    flex:1;
    display: flex;
}

.target-word{
  margin-top: 10px;
}
.keyword{
  color: #ff685c;
}
.other-word{
  margin-left: 6px;
  color:#999;
}


/* 下方左右结构文章卡片 */
.down-list{
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  background-color: #fff;
  padding: 0 15px;
}

.down-list-item{
  display: flex;
  flex-direction: column;
  width: 165px;
}

.image-container{
  background-color: #eee;
  border:1px rgb(221,221,221) solid;
  width: 100%;
}

.image-container image{
  /* 注意这个。终于解决了在小程序中图片尺寸的问题了*/
  width: 165px;
  height: 190px;
}

.info-container{
  padding:8px;
  color:#080808;
  background-color: #fff;
  font-size: 14px;
  overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.info-container .price{
  color:#f14538;
  margin-top: 8px;
  line-height: 1;
}

.info-container .info{
  margin-top: 8px;
  line-height: 1;
}
